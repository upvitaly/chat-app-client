# EditorConfig is awesome: http://EditorConfig.org

# top-most EditorConfig file
root = true

[*]
end_of_line = lf
insert_final_newline = false
trim_trailing_whitespace = true
indent_style = space
indent_size = 4

# Matches the exact file .travis.yml
[{.travis.yml}]
indent_style = space
indent_size = 2
